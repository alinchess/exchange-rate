<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".screens.PrivatbankFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/no_internet_layout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_no_internet"
            android:layout_width="126dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:foregroundGravity="center"
            android:src="@drawable/no_internet"
            app:layout_constraintBottom_toTopOf="@+id/tv_no_internet"
            app:layout_constraintEnd_toEndOf="@+id/tv_no_internet"
            app:layout_constraintHorizontal_bias="0.466"
            app:layout_constraintStart_toStartOf="@+id/tv_no_internet" />

        <TextView
            android:id="@+id/tv_no_internet"
            android:layout_width="156dp"
            android:layout_height="54dp"
            android:foregroundGravity="center"
            android:gravity="center"
            android:text="@string/no_internet"
            android:textSize="27sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_privat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
</FrameLayout>